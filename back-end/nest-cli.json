{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "mail/**/*.html", "watch": true, "outDir": "dist/src" },
      { "include": "assets/**/*", "watch": true, "outDir": "dist/src" }
    ],
    "webpack": false,
    "tsConfigPath": "tsconfig.build.json"
  },
  "builder": {
    "type": "tsc",
    "options": {
      "assets": [
        { "include": "mail/**/*.html", "watch": true, "outDir": "dist/src" },
        { "include": "assets/**/*", "watch": true, "outDir": "dist/src" }
      ]
    }
  }
}
